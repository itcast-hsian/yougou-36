/* pages/goods_detail/index.wxss */
.swiper{
  height:720rpx;
}

.swiper image{
  width:100%;
  height:100%;
}

.goods-info{
  padding:20rpx;
  border-bottom:20rpx #eee solid;
}

.goods-price{
  font-size:22px;
  color:red;
  margin-bottom:20rpx;
}

.goods-title{
  display: flex;
  justify-content: space-between;
  margin-bottom:20rpx;
}

.goods-title-left{
  flex:1;
  font-size: 14px;

  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  /*控制在3行*/
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.goods-star{
  width:100rpx;
  font-size: 12px;
  color:#999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left:1px #ddd solid;
  margin-left:20rpx;
}

.express{
  color:#999;
  font-size:14px;
}